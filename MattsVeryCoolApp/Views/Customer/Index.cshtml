@model IEnumerable<MattsVeryCoolApp.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Customer</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => customer.Name)</td>
            <td>@Html.DisplayFor(modelItem => customer.Address)</td>
            <td>@Html.DisplayFor(modelItem => customer.Email)</td>
            <td>@Html.DisplayFor(modelItem => customer.PhoneNumber)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-success">Edit</a>
                <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-info">View</a>
                <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>