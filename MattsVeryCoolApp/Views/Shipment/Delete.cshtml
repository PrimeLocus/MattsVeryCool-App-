@model MattsVeryCoolApp.Models.Shipment

@{
    ViewData["Title"] = "Delete Shipment";
}

<h2>Delete Shipment</h2>

<h3>Are you sure you want to delete this shipment?</h3>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Origin)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Origin)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Destination)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Destination)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Weight)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Weight)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ShipmentId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>